@using System.Globalization

@{
    // Path formatted for display
    string[] curPath = CultureInfo.CurrentCulture.TextInfo
    .ToTitleCase(Document.Destination.FullPath
    .Replace('_', ' ')
    .Replace(".html", "")

    // Special formatting
    .Replace("csharp", "C#")
    .Replace("linq", "LINQ"))

    // Correct overzealous capitalization
    .Replace(" A ", " a ")
    .Replace(" Of ", " of ")
    .Replace(" And ", " and ")
    .Replace(" The ", " the ")
    
    .Split('/');
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name=viewport content="width=device-width,initial-scale=1">
    <title>@(curPath[^1].Replace("Index", "Home") + " - envoidia's website")</title>
    <link href="/style.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="header">
    <img src="/logo.png" loading="lazy" style="width:60px;height:60px;margin-top:20px" alt="My logo">
    <div class="topnav">
        @{
            // Header component, highlighted if active
            void _NavLink(string href, string dataPage, string text) {
                <a href="@href" data-page="@dataPage" class="@(Document.Destination.FullPath.Contains(dataPage) ? "active" : "")">@text</a>
            }

            _NavLink("/index", "index", "Home");
            _NavLink("/socials", "socials", "Socials");
            _NavLink("/projects", "projects", "Projects");
            _NavLink("/writing", "writing", "Writing");
            _NavLink("/fonts", "fonts", "Fonts");
        }
    </div>
</div>
<div class="directory">
    @{
        // Build path display
        string[] paths = Document.Destination.FullPath
       .Replace(".html", "")
       .Split('/');

       // Always put Home first
       bool onHomepage = paths[0] == "index";
       <a href="/index" class=@(onHomepage ? "loc" : "")>Home</a>

       // Only continue if not already done
       if(!onHomepage) {
           // Add each subdirectory
           for(int i = 0; i < paths.Length; i++) {
               <a href="@('/' + string.Join('/', paths[0..(i + 1)]))" class="@((i == paths.Length - 1) ? "loc" : "")">@curPath[i]</a>
           }
       }
    }
    <p id="directory-path"></p>
</div>
<br>
<br class="mobile-break"><br class="mobile-break"><br class="mobile-break"><br class="mobile-break">
@RenderBody()
</body>
</html>
